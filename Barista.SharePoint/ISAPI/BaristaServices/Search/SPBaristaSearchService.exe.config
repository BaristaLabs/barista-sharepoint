<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <system.serviceModel>
    <services>
      <service name="Barista.Services.BaristaSearchService"
               behaviorConfiguration="BaristaSearchServiceBehavior">
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8500/Barista/Search"/>
          </baseAddresses>
        </host>
        <!-- this endpoint is exposed at the base address provided by host: http://localhost:8500/Barista/Search  -->
        <endpoint address=""
                  binding="wsHttpBinding"
                  bindingConfiguration="BaristaSearchServiceHttpBinding"
                  contract="Barista.Services.IBaristaSearch" />
        <!-- the mex endpoint is exposed at http://localhost:8500/Barista/Search/mex -->
        <endpoint address="mex"
                  binding="mexHttpBinding"
                  contract="IMetadataExchange" />
      </service>
    </services>
    <bindings>
      <wsHttpBinding>
        <binding name="BaristaSearchServiceHttpBinding" closeTimeout="00:00:10" openTimeout="00:01:00" receiveTimeout="00:05:00" sendTimeout="00:05:00" maxReceivedMessageSize="2147483647">
        </binding>
      </wsHttpBinding>
    </bindings>
    <behaviors>
      <serviceBehaviors>
        <behavior name="BaristaSearchServiceBehavior">
          <serviceMetadata httpGetEnabled="true"/>
          <serviceDebug includeExceptionDetailInFaults="true"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
</configuration>