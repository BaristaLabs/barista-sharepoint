<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.serviceModel>
    <serviceHostingEnvironment aspNetCompatibilityEnabled="true" />
    <services>
      <!-- Note: the service name must match the configuration name for the service implementation. -->
      <service name="Barista.Web.BaristaWebService" behaviorConfiguration="BaristaWebServiceBehavior">
        <host>
          <baseAddresses>
            <add baseAddress="*" />
          </baseAddresses>
        </host>
        <!-- Add the following endpoint.  -->
        <endpoint binding="webHttpBinding" contract="Barista.IBaristaWebService" address="" />
        <!-- Note: your service must have an http base address to add this endpoint. -->
        <endpoint contract="IMetadataExchange" binding="mexHttpBinding" address="mex" />
      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior name="BaristaWebServiceBehavior">
          <!-- Add the following element to your service behavior configuration. -->
          <serviceMetadata httpGetEnabled="true" />
        </behavior>
      </serviceBehaviors>
    </behaviors>

  </system.serviceModel>

  <system.web>
    <compilation debug="true" targetFramework="4.5" />
    <httpRuntime targetFramework="4.5" />
  </system.web>
  <system.webServer>
    <modules>
      <add name="WcfReadEntityBodyModeModule" type="Barista.Web.WcfReadEntityBodyModeModule, Barista.Web, Version=1.0.0.0, Culture=neutral" />
    </modules>
  </system.webServer>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="YamlDotNet.RepresentationModel" publicKeyToken="2b53052c5884d7a1" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-2.0.1.19282" newVersion="2.0.1.19282" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
</configuration>
